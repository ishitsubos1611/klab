<?php
session_start();
// セッションにアカウント情報がある場合
if(isset($_SESSION['Gaccount'])){
  // 認証処理
  $account = authCheck($_SESSION['Gaccount']['Gname'], $_SESSION['Gaccount']['password']);
  if(isset($Gaccount)){
    // ログインフラグをtrueにする
    $login = true;
    // セッションにユーザー情報を格納
    $_SESSION['Gaccount'] = $Gaccount;
  } else {
    // ログインフラグをfalseにする
    $login = false;
    // セッションを破棄
    unset($_SESSION['Gaccount']);
  }
// セッションにアカウント情報がない場合
} else {
  // ログインフラグをfalseにする
  $login = false;
}
?>
